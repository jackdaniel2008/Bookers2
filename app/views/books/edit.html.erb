<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  <label for="inputBody">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputBody" %>
  <%= f.submit "Update Book" %>
<% end %>

<div>
  <%= link_to book_path do %>
    <%= "Show" %>
  <% end %>
   | 
  <%= link_to books_path do %>
    <%= "Back" %>
  <% end %>
</div>