  <div>
    <%= flash[:notice] %>
  </div>
  
  <%= render 'books/user_info', user: @user, book: @book %>

  <h2 class="newbook">New book</h2>
  <%= form_with model: @book do |f| %>
    <label for="book-title">Title</label>
      <%= f.text_field :title %>
    <label for="book-opinion">Opinion</label>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
  <% end %>

  <h2>Books</h2>
    <table class="table-index">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <div class="book-index">
        <tbody>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>
      </div>
      <% end %>
    </table>


