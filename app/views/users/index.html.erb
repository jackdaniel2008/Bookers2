  <%= render 'books/user_info', user: @user, book: @book %>

  <h2 class="newbook">New book</h2>
  <%= form_with model: @book do |f| %>
    <label for="book-title">Title</label>
      <%= f.text_field :title %>
    <label for="book-opinion">Opinion</label>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
  <% end %>

  <h2>Books</h2>
    <table class="table-index">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <div class="user-index">
        <tbody>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= "Show" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </div>
      <% end %>
      <%= paginate @users %>
    </table>
